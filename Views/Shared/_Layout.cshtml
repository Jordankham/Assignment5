        <span class="navbar-brand ml-2">
            Welcome to My Bookstore
        </span>
    </div>
    <div class="text-center">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="text-center">
        @RenderBody()
    </div>
    <footer>Khamvongsouk 2021</footer>
</body>
</html>